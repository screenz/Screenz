<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="horizontal" android:background="@drawable/info_display_bg">
    <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5dip" android:id="@+id/infoScreenSize" android:text="Size" android:layout_alignParentLeft="true" style="@style/resolutionText"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/infoScreenSeparator" android:layout_toRightOf="@+id/infoScreenSize" style="@style/resolutionText" android:padding="5dip" android:text="/"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5dip" android:id="@+id/infoScreenDensity" android:text="Density" style="@style/resolutionText" android:layout_toRightOf="@+id/infoScreenSeparator"></TextView>
    </RelativeLayout>
    
</LinearLayout>
